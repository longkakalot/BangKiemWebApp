@model IEnumerable<DanhMuc>
@{
    ViewData["Title"] = "Index";
}

<h4>@ViewBag.time</h4>
<h1>Chọn một trong những bảng kiểm bên dưới</h1>

<div id="abc" class="row">
    
        @foreach (var item in Model)
        {
            
            <div id="@item.Id" class="col-xl-3 col-sm-6 py-2 listItem">
                <a asp-controller="BangKiem" asp-action="NhapBangKiem" asp-route-id="@item.Id">
                    <input type="button" value="@item.Ten" class="btn btn-primary" style="width: 100%; height: 100px; font-size: 24px"/>
                </a>
                @*<input id="txtId" type="button" hidden="" value="@item.Id" class="btn btn-primary" style="width: 100%; height: 100px"/>*@
            </div>
        }
    
    
</div>

@section Scripts
{
    <script>
        $(document).ready(function() {
            //lấy tất cả id của div vào array
            var arr = [];
            $('.listItem').each(function(){
                arr.push($(this).attr('id'));
            });
            console.log(arr);
        });
    </script>
}
